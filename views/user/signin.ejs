<div ng-controller="userController as ctrl">
	<form>
		<div class="amo-signin-container">
			<div class="amo-signin-panel">
				<div class="amo-signin-list-panel"> 	
					<span class="errorMsg"> {{ ctrl.signinMsg }} </span>
				</div>
				<div class="amo-signin-list-panel">
					<div>
						<input type="text" id="username" name="username" placeholder="User ID" ng-model="ctrl.signinfo.username" />
					</div>
				</div>
				<div class="amo-signin-list-panel">
					<div>
						<input type="password" id="password" name="password" placeholder="Password" ng-model="ctrl.signinfo.password" />
					</div>
				</div>
				<div class="amo-signin-list-panel">
					<button type="button" class="btn btn-success" ng-click="ctrl.signin()">Sign In</button>
				</div>
				<div class="amo-signin-list-panel">
					<a href='/join'><u>Join</u></a>
				</div>
			</div>
		</div>
	</form>
</div>

<script type="text/javascript" src="/js/user.js"></script>
<link rel="stylesheet" type="text/css" href="/styles/user.css" />