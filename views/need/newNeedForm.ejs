<script type="text/ng-template" id="newNeedForm.html">
	<div class="modal-header">
        <h3 class="modal-title">New Need</h3>
    </div>
	<div class="modal-body" ng-init="init()">
		<div class="amo-newneed-listbox">
			<div style="display: table">
				<div style="display: table-cell; width: 300px">
					<span>Category:</span>
			    	<span>
						<div class="btn-group" dropdown is-open="status.isCategoryOpen">
					      	<button type="button" class="btn btn-default dropdown-toggle amo-filter-button" dropdown-toggle>
					        	{{newNeed.category.value}} <span class="caret"></span>
					      	</button>
					      	<ul class="amo-filter-dropdown-listbox dropdown-menu" role="menu">
					        	<li ng-repeat="category in categories">
					        	<a href="#" ng-click="newNeed.category = category">{{category.value}}</a>
					        	</li>
					      	</ul>
					    </div>
				    </span>
			    </div>
			    <div style="display: table-cell">
			    	<span>Location:</span>
			    	<span>
					    <div class="btn-group" dropdown is-open="status.isLocationOpen">
					    	<button type="button" class="btn btn-default dropdown-toggle amo-filter-button" dropdown-toggle>
						        {{newNeed.location.value}} <span class="caret"></span>
						    </button>
						    <ul class="amo-filter-dropdown-listbox dropdown-menu" role="menu">
						        <li ng-repeat="location in locations">
						        	<a href="#" ng-click="newNeed.location = location">{{location.value}}</a>
						        </li>
						    </ul>
					    </div>
				    </span>
			    </div>
			</div>
		</div>
		<div class="amo-newneed-listbox">
			<div class="amo-newneed-section">
				<div class="amo-newneed-section-firstcell">
					<span class="amo-newneed-label">Subject : </span>
				</div>
				<div class="amo-newneed-section-secondcell">
					<span>
						<input type='text' class="amo-newneed-subject-input" ng-model="newNeed.subject" />
					</span>
				</div>
			</div>
		</div>
		<div class="amo-newneed-listbox">
			<div class="amo-newneed-section">
				<div class="amo-newneed-section-firstcell">
					<span class="amo-newneed-label">Need :</span>
				</div>
				<div class="amo-newneed-section-secondcell">
					<span>
						<textarea class="amo-newneed-content-input" ng-model="newNeed.content"></textarea>
					<span>
				</div>
			</div>
		</div>
		<div class="amo-newneed-listbox">
			<div class="amo-newneed-section">
				<div class="amo-newneed-section-firstcell">
					<span class="amo-newneed-label">Required Field :</span>
				</div>
				<div class="amo-newneed-section-secondcell">
					<span class="amo-inline-listbox" ng-repeat="requiredfield in newNeed.requiredfields">
						{{ requiredfield }}
						<span class="amo-btn-remove btn glyphicon glyphicon-remove" aria-hidden="true" ng-click="ctrl.deleteCategory(category)" />
					</span>
				</div>
			</div>
			<div class="amo-newneed-section">
				<div class="amo-newneed-section-firstcell">
				</div>
				<div class="amo-newneed-section-secondcell">
					<input type="text" ng-model="requiredfield" />
					<button type="button" class="btn btn-success" ng-click="addRequiredField()">Add</button>
				</div>
			</div>
		</div>
		<div class="amo-newneed-listbox amo-newneed-control">
			<button type="button" class="btn btn-success" ng-click="createNewNeed()">Post</button>
			<button type="button" class="btn btn-danger" ng-click="cancel()">Cancel</button>
		</div>
	</div>
	<div class="modal-footer">
	</div>
</script>