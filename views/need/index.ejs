<div style="display: table">
	<div ng-controller="needController as ctrl">
		<div class="amo-leftPanel" ng-init="ctrl.getNeedCnt()">
			<div class="amo-sidebar-box">
				<ul class="nav nav-pills nav-stacked">
					<li class="leftMenu" ng-class="{ 'active': ctrl.isLeftMenuActive(0)}">
						<a class="linked" ng-click="ctrl.getNeeds('open', 0)">Open 
							<span class="badge"> {{ctrl.openCnt}} </span>
						</a>
					</li>
					<ul class="nav nav-pills nav-stacked" display="">
						<li class="leftSubmenu" ng-class="{ 'active': ctrl.isLeftMenuActive(1)}">
							<a class="linked" ng-click="ctrl.getNeeds('hasoffer', 1)">
								Has offers <span class="badge"> {{ctrl.hasofferCnt}} </span>
								<span class="glyphicon glyphicon-check" aria-hidden="true" ng-show="bNewOfferExist">{{newOfferCnt}}</span>
							</a>
						</li>
					</ul>
					<li class="leftMenu" ng-class="{ 'active': ctrl.isLeftMenuActive(2)}">
						<a class="linked" ng-click="ctrl.getNeeds('closed', 2)">
							Closed <span class="badge"> {{ctrl.closedCnt}} </span>
						</a>
					</li>
				</ul>
			</div>
		</div>
		<div align="left" class="amo-listpanel">
			<div>
				<div class="btn-group btn-group-justified" role="group"
					ng-show="ctrl.isShowNeedList"
					ng-click="ctrl.openNewNeedForm()">
					<div class="btn-group" role="group">
						<button type="button" class="btn btn-default">Create new need</button>
					</div>
				</div>
				<div class="newneedpanel" ng-show="ctrl.isShowCreateNeed" >
					<%- include newNeedForm %>
				</div>
			</div>
			<div ng-show="ctrl.isShowNeedDetail">
				<%- include needDetail %>
			</div>
			<div style="height: 600px; overflow-y: auto; margin-top: 20px" ng-init="ctrl.getNeeds('open', 0)"
					ng-show="ctrl.isShowNeedList">
				<%- include needlist %>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript" src="/js/need.js"></script>
<link rel="stylesheet" type="text/css" href="/styles/need.css" />