<div style="display: table">
	<div ng-controller="otherneedController as ctrl">
		<div class="amo-leftPanel" ng-init="ctrl.init()">
			<div class="amo-sidebar-box">
				<ul class="nav nav-pills nav-stacked">
					<li ng-class="{ 'active': ctrl.isLeftMenuActive(0)}">
						<a class="linked" ng-click="ctrl.getNeeds('open', 0)">
							Open <span class="badge"> {{ctrl.needs.length}} </span>
						</a>
					</li>
				</ul>
			</div>
		</div>
		<div align="left" class="amo-listpanel">
			<div>
				<%- include filters %>
			</div>
			<div ng-show="ctrl.isShowNeedDetail">
				<%- include needDetail %>
			</div>
			<div style="height: 600px; overflow-y: auto; margin-top: 20px" ng-show="ctrl.isShowNeedList">
				<%- include needlist %>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript" src="/js/otherneed.js"></script>
<link rel="stylesheet" type="text/css" href="/styles/otherneed.css" />