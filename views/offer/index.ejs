<div style="display: table">
	<div ng-controller="offerController as ctrl">
		<div class="amo-leftPanel" ng-init="ctrl.getNeedCnt()">
			<div class="amo-sidebar-box">
				<ul class="nav nav-pills nav-stacked">
					<li ng-class="{ 'active': ctrl.isLeftMenuActive(0)}">
						<a class="linked" ng-click="ctrl.getNeeds('open', 0)">
							Open <span class="badge"> {{ctrl.openCnt}} </span>
						</a>
					</li>
					<li ng-class="{ 'active': ctrl.isLeftMenuActive(1)}">
						<a class="linked" ng-click="ctrl.getNeeds('selected', 1)">
							Selected <span class="badge"> {{ctrl.selectedCnt}} </span>
							<span class="glyphicon glyphicon-check" aria-hidden="true" ng-show="bNewSelectedOfferExist">{{newSelectedOfferCnt}}</span>
						</a>
					</li>
					<li ng-class="{ 'active': ctrl.isLeftMenuActive(2)}">
						<a class="linked" ng-click="ctrl.getNeeds('closed', 2)">
							Closed <span class="badge"> {{ctrl.closedCnt}} </span>
						</a>
					</li>
				</ul>
			</div>
		</div>
		<div align="left" class="amo-listpanel">
			<div ng-show="ctrl.isShowNeedDetail">
				<%- include needDetail %>
			</div>
			<div style="height: 600px; overflow-y: auto; margin-top: 20px" ng-init="ctrl.getNeeds('open', 0)"
					ng-show="ctrl.isShowNeedList">
				<%- include needlist %>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript" src="/js/offer.js"></script>